<div class="box"> 
  <div class="card text-center">
    <div class="card-header">
      <h3>Search Stocks</h3>
    </div>
    <div class="card-body">
      <p>Enter the symbol of the stock you're interested in.</p>
      <%= form_with url: new_transaction_path, method: :get do |form| %>
        <div class="mb-3">
          <%= form.text_field :symbol, class: "form-control", placeholder: "ex: MSFT, AMZN, GOOGL"%>
        </div>

        <div>
          <%= form.submit "SEARCH", class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
    <div class="card-footer">
        <% if current_user.approved? %>
            <%= link_to ' Back', portfolio_index_path, class: "bi-arrow-left-short space" %>
        <% end %>
    </div>
  </div>
</div>

