<div class="box"> 
  <div class="card text-center">
    <div class="card-header">
      <h3>Search Portfolio</h3>
    </div>
    <div class="card-body">
      <p>Enter the symbol of the stock you're interested in.</p>
      <%= form_with url: trader_symbol_search_path(:logo) do |form| %>
        <div class="mb-3">
          <%= form.text_field :logo, class: "form-control", placeholder: "ex: MSFT, AMZN, GOOGL"%>
        </div>

        <div>
          <%= form.submit "SEARCH", class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
    <div class="card-footer">
      <%= link_to ' Back', portfolio_index_path, class: "bi-arrow-left-short space" %>
    </div>
  </div>
</div>