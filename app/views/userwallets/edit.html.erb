<div class="box"> 
    <div class="card text-center">
        <div class="card-header">
            <h3>Cash In</h3>
        </div>
        <div class="card-body">
        <%= form_for @amount, method: :patch do |form| %>
          
            <div class="mb-3">
              <%= form.label :amount %>
              <%= form.number_field :amount, class: "form-control", value: 0, placeholder: "0.00" %>
            </div>
          
            <div class="field">
              <%= form.hidden_field :user_id, value: current_user.id %>
            </div>
          
            <div>
              <%= form.submit class: "btn btn-success" %>
            </div>
        <% end %>
        </div>
        <div class="card-footer">
            <%= link_to 'Back', portfolio_index_path, class: "bi-arrow-left-short space" %>
        </div>
    </div>
</div>
