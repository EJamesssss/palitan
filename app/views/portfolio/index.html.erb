<div class="row">
  <div class="col-sm-13">
    <div class="card-header">
      <div class="card-body-categ">
        <h2>My Portfolio</h2>
        <div class="add-users">
          <%= link_to ' Add stocks', home_index_path, class: "nav-link bi-plus-square"%>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="table-box"> 
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>SYMBOL</th>
        <th>COMPANY NAME</th>
        <th>QTY</th>
        <th>COST PRICE</th>
        <th>TOTAL</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if @portfolios.count == 0 %>
      <tr>
        <td><i> No data available in table </i></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <% end %>
      <% @portfolios.each do |portfolio|%>
        <tr>
          <td><%= portfolio.symbol%></td>
          <td><%= portfolio.company_name%></td>
          <td><%= portfolio.shares%></td>
          <td>₱ <%= portfolio.cost_price%></td>
          <td>₱ <%= portfolio.total%></td>
          <td class="center">
            <%= link_to ' BUY', home_index_path, class: "btn btn-show bi-bag" %>
            <a class="btn btn-show bi-coin"> SELL</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>