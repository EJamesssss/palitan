<div class="box"> 
  <div class="card text-center">
    <div class="card-header">
      <h3>Add Portfolio</h3>
    </div>
    <div class="card-body">
      <p>Enter the symbol of the stock you're interested in.</p>
      <form>
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="ex: MSFT, JS, GOOGL">
      </div>
      </form>
    </div>
    <div class="card-footer">
      <%= link_to ' Search', portfolio_index_path, class: "btn btn-success bi-search space" %>
      <%= link_to ' Back', portfolio_index_path, class: "btn btn-danger bi-arrow-left-short space" %>
    </div>
  </div>
</div>