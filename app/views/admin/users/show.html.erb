<div class="box"> 
    <div class="card text-center">
        <div class="card-body">
            <p>Email Address</p>
            <h4><%= @user.email%></h4>

            <p>Role</p>
            <h4><%= @user.admin === true ? "Admin" : "Trader"%></h4>

            <p>Status</p>
            <h4><%= @user.approved === false ? "Pending" : "Approved"%></h4>
            <br/>
            
        </div>
        <div class="card-footer">
            <%= link_to ' Back', admin_users_path, class: "btn btn-cancel bi-arrow-left-short space" %>
        </div>
    </div>
</div>