<div class="row">
  <div class="col-sm-13">
    <div class="card-header">
      <div class="card-body-categ">
        <h2>List of Users</h2>
        <div class="add-users">
          <%= link_to ' Add User', new_admin_user_path, class: "nav-link bi-plus-square"%>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="table-box"> 
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>EMAIL</th>
        <th>ACCOUNT</th>
        <th>ROLE</th>
        <th>STATUS</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user|%>
        <tr>
          <td><%= user.email%></td>
          <td><%= user.confirmed? ? "Confirmed" : "Not Confirmed"%></td>
          <td><%= user.admin === true ? "Admin" : "Trader"%></td>
          <td><%= user.approved === false ? "Pending" : "Approved"%></td>
          <td><%= link_to ' Show', admin_user_path(user), class: "btn btn-show bi-eye-fill" %></td>
          <td><%= link_to ' Edit', edit_admin_user_path(user), class: "btn btn-show bi-pencil-fill" %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
