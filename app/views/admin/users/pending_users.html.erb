<h1>List of Users</h1>
<div class="table-box"> 
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>EMAIL</th>
                <th>ROLE</th>
                <th>STATUS</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @unapproved.each do |waiting|%>
                <%if waiting.confirmed?%>
                    <tr>
                        <td><%= waiting.email%></td>
                        <td><%= waiting.admin === true ? "Admin" : "Trader"%></td>
                        <td><%= waiting.approved === false ? "Pending" : "Approved"%></td>
                        <td><%= link_to "Approve User", confirm_user_path(:id => waiting.id, "waiting[approved]" => true), :method => :patch, class: "btn btn-show bi-check-lg" %></td>
                    </tr>
                <%end%>
            <%end%>
        </tbody>
    </table>
</div>