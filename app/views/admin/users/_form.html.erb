<%= form_with model: [:admin, user] do |form| %>

  <div>
    <%= form.label "Email" %>
    <br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label "Password" %>
    <br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.check_box :admin %> 
    <%= form.label :admin %>
  </div>

  <div>
    <%= form.check_box :approved %> 
    <%= form.label :approved %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>