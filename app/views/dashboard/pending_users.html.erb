<h1>List of Users</h1>
<div class="table-box"> 
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>EMAIL</th>
                <th>ROLE</th>
                <th>STATUS</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @unapproved.each do |waiting|%>
                <tr>
                    <td><%= waiting.email%></td>
                    <td><%= waiting.admin === true ? "Admin" : "Trader"%></td>
                    <td><%= waiting.approved === false ? "Pending" : "Approved"%></td>
                    <td><%= link_to " Approve", destroy_user_session_path, method: :delete, class: "btn btn-show bi-check-lg" %></td>
                </tr>
            <%end%>
        </tbody>
    </table>
</div>