<div class="row">
  <div class="col-sm-13">
    <div class="card-header">
      <div class="card-body-categ">
        <h2>My Portfolio</h2>
        <div class="add-users">
          <%= link_to ' Add stocks', home_index_path, class: "nav-link bi-plus-square"%>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="table-box"> 
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>USER</th>
        <th>SYMBOL</th>
        <th>COMPANY NAME</th>
        <th>QTY</th>
        <th>PRICE PER SHARE</th>
        <th>TRANSACTION TYPE</th>
        <th>TRANSACTION DATE</th>
      </tr>
    </thead>
    <tbody>
      <% if @transactions.count == 0 %>
      <tr>
        <td><i> No data available in table </i></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <% end %>
      <% @transactions.each do |transaction|%>
        <tr>
          <td><%= transaction.user.email%></td>
          <td><%= transaction.symbol%></td>
          <td><%= transaction.company_name%></td>
          <td><%= transaction.shares%></td>
          <td>â‚± <%= transaction.cost_price%></td>
          <td><%= transaction.transaction_type%></td>
          <td><%= transaction.created_at.strftime('%B %e %Y at %l:%M %p')%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>