<body class="align">
  <div class="grid align__item">
    <div class="register">
      <%= image_tag "logo.png", class:"site_logo" %>
      <h2>Log In</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form"}) do |f| %>
        <div class="form__field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email Address" %>
        </div>

        <div class="form__field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form__field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="form__field">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <p>Don't have an account yet?<%= render "devise/shared/links" %></p>
    </div>
  </div>
</body>